    <style name="inputLayoutForm" parent="Widget.Design.TextInputLayout">
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="editTextForm">
        <item name="backgroundTint">@color/rosaFormulario</item>
        <item name="boxBackgroundMode">none</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textColorHint">@color/grisForm</item>
