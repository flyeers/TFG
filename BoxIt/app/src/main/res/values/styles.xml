<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Logo">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/textoOscuro</item>
        <item name="android:fontFamily">@font/interbold</item>
    </style>

    <style name="Formulario">
        <item name="android:background">@drawable/shape</item> <!-- Fondo personalizado -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">12dp</item> <!-- Espacio izquierdo entre texto y field -->
        <item name="android:paddingEnd">12dp</item> <!-- Espacio derecho entre texto y field -->
        <item name="android:paddingTop">8dp</item> <!-- Espacio interno superior -->
        <item name="android:paddingBottom">8dp</item> <!-- Espacio interno inferior -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textColorHint">@color/textoOscuro</item>
        <item name="android:textColor">@color/textoOscuro</item>
        <item name="android:textSize">15dp</item>


    </style>

    <style name="Boton_login">
       <item name="android:background">@drawable/button_shape</item> <!-- Fondo personalizado -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textColorHint">@color/textoOscuro</item>
        <item name="android:backgroundTint">@color/textoOscuro</item>
        <item name="android:textColor">@color/fondoClaro</item>
        <item name="android:textSize">15dp</item>


    </style>

    <style name="CardFont">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/rosaBoton</item>
        <item name="android:fontFamily">@font/interregular</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">15dp</item>

    </style>
    
    <style name="FondoBase">

        <item name = "android:layout_width">540dp</item>
        <item name="android:layout_height">312dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">-68dp</item>
        <item name="android:layout_marginTop">-156dp</item>
        <item name="android:background">@drawable/shape_ellipse</item>


    </style>

    <style name="FondoPerfilView">

        <item name = "android:layout_width">540dp</item>
        <item name="android:layout_height">400dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">-75dp</item>
        <item name="android:layout_marginTop">-156dp</item>
        <item name="android:background">@drawable/shape_ellipse</item>


    </style>

    <style name="TituloFondo">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/rosaBoton</item>
        <item name="android:fontFamily">@font/inter_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>


    </style>

    <style name="TituloPrediseÃ±ado">
