<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:background="@drawable/shape_add_btn"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    tools:layout_editor_absoluteX="25dp"
    tools:layout_editor_absoluteY="16dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="10dp">

    <ImageView
        android:id="@+id/imgBoxPred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        tools:srcCompat="@android:drawable/divider_horizontal_bright" />


    <TextView
        android:id="@+id/nameBoxPred"
        style="@style/TituloPrediseñado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Caja prediseñada" />


</androidx.cardview.widget.CardView>