<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.CrearCapsulaForm">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ellipse_13"
                style="@style/FondoBase" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-140dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/homeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/home" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btnInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/question" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/nombreCapsulaTit"
                style="@style/TituloFondo"
                android:background="#70FAFAFA"
                android:backgroundTint="#F8F1F3"
                android:text="@string/CapsulaTitulo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:background="#70FAFAFA"
                android:backgroundTint="#F8F1F3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/daysToClose"
                        style="@style/textCapsuleForm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:text="0" />

                    <TextView
                        android:id="@+id/close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="8dp"
                        android:fontFamily="@font/inter_medium"
                        android:gravity="center"
                        android:text="@string/cerrarse"
                        android:textColor="@color/rosaBoton" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/daysToOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:fontFamily="@font/inter_medium"
                        android:text="0"
                        android:textColor="@color/rosaBoton" />

                    <TextView
                        android:id="@+id/open"
                        style="@style/textCapsuleForm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:text="@string/abrirse" />
                </LinearLayout>
            </LinearLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_nombre"
                style="@style/inputLayoutForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp">

                <EditText
                    android:id="@+id/campo_nombre_capsula"
                    style="@style/editTextForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/NombreCapsula"
                    android:inputType="text"
                    android:textColor="@color/textoOscuro"
                    android:textColorHint="@color/grisForm" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/layTextCierre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fechaCierre"
                    style="@style/textCapsuleForm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fechaCierre"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/fechaCierre_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/interregular"
                    android:gravity="end"
                    android:textColor="@color/rosaBoton"
                    android:textSize="17dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layTextApertura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fechaApertura"
                    style="@style/textCapsuleForm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/fechaApertura"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/fechaApertura_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/interregular"
                    android:gravity="end"
                    android:textColor="@color/rosaBoton"
                    android:textSize="17dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/numberPickerClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <NumberPicker
                        android:id="@+id/numberPickerDayClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </NumberPicker>

                    <NumberPicker
                        android:id="@+id/numberPickerMonthClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"></NumberPicker>

                    <NumberPicker
                        android:id="@+id/numberPickerYearClose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">

                    </NumberPicker>

                </LinearLayout>

                <Button
                    android:id="@+id/buttonSetCierre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/rosaBotonClaro"
                    android:text="@string/set" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/numberPickerApertura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <NumberPicker
                        android:id="@+id/numberPickerDayOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </NumberPicker>

                    <NumberPicker
                        android:id="@+id/numberPickerMonthOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"></NumberPicker>

                    <NumberPicker
                        android:id="@+id/numberPickerYearOpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp">

                    </NumberPicker>
                </LinearLayout>

                <Button
                    android:id="@+id/buttonSetApertura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/rosaBotonClaro"
                    android:text="@string/set" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnAddImgCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconoImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/photo" />

                <TextView
                    android:id="@+id/fotoPortadaCaja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/selectImg"
                    android:textAppearance="@style/Logo"
                    android:textColor="@color/rosaBoton"
                    android:textSize="17dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnAddColCap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iconoCol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:src="@drawable/colaboradores" />

                <TextView
                    android:id="@+id/addColCaja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="@string/addCol"
                    android:textAppearance="@style/Logo"
                    android:textColor="@color/rosaBoton"
                    android:textSize="17dp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_friends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:reverseLayout="true"
                app:stackFromEnd="true">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/daysClose"
                style="@style/textCapsuleForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="@string/tiempoCerrado" />

            <Button
                android:id="@+id/CrearCapBTN"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/rosaBoton"
                android:clickable="true"
                android:elevation="5dp"
                android:fontFamily="@font/interbold"
                android:text="@string/crearCapsula"
                android:textColor="@color/rosaFormulario"
                android:textSize="20dp" />

            <Button
                android:id="@+id/cancelarBtn"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/rosaBotonClaro"
                android:clickable="true"
                android:elevation="5dp"
                android:fontFamily="@font/interbold"
                android:text="@string/cancelar"
                android:textColor="@color/rosaFormulario"
                android:textSize="20dp"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>