<!-- res/layout/modal_imagen.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:backgroundTint="@color/fondoAdd"

    android:background="@color/fondoAdd">

    <TextView
        android:id="@+id/textAbandono"
        style="@style/titulosVista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/abandonarCap" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonCancelar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:textColor="@color/rosaBoton"
            android:backgroundTint="@color/rosaBotonClaro"
            android:text="@string/cancelar" />

        <Button
            android:id="@+id/buttonEliminar"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:backgroundTint="@color/rosaBoton"
            android:text="@string/abandonar"
            android:textColor="@color/fondoAdd" />
    </LinearLayout>
</LinearLayout>