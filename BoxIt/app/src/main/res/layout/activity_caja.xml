<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.Caja">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ellipse_13"
                style="@style/FondoBase" />

            <TextView
                android:id="@+id/nombre_caja"
                style="@style/TituloFondo"
                android:layout_marginTop="-100dp"
                android:text="@string/CajaTitulo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnTodo"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Todo"
                        android:textColor="@color/rosaBoton"
                        android:backgroundTint="@color/fondoCards"
                        android:textSize="20dp" />

                    <ImageView
                        android:layout_width="290dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="15dp"
                        android:layout_height="50dp"
                        android:src="@drawable/rectangle">

                    </ImageView>

                    <TextView
                        android:id="@+id/fotosCaja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-280dp"
                        android:fontFamily="@font/interbold"
                        android:text="Fotos"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/rosaBoton"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/videosCaja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/interbold"
                        android:text="Videos"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/rosaBoton"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/musicaCaja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/interbold"
                        android:text="Musica"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/rosaBoton"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/notasCaja"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/interbold"
                        android:text="Notas"
                        android:layout_marginRight="5dp"
                        android:textColor="@color/rosaBoton"
                        android:textSize="18dp" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonAdd2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            tools:background="@drawable/shape_circle"
            android:text="+"
            android:textColor="#000000"
            android:textSize="30dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>